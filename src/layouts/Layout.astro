---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts.ts";

import Header from '@sofidevo/astro-dynamic-header/Header';


const {headerType } = Astro.props;

import { menuItems } from "@src/menuItems.data.js";
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>

      <Header
      headerType={headerType}
      menuItems={menuItems}
      logoSrc="https://itssofi.dev/img/icons/sofi-icon.webp"
      logoWidth="50px"
      logoText="SofiDev"
      >
      <a slot="actions" class="action-button" href="https://ko-fi.com/sofidev" target="_blank"> Buy me a coffe </a>
    </Header>

      <main>
        <slot />
    </main>
    <!-- <Footer /> -->
  </body>
</html>

<style is:global>
  main {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
    height:100%;
    min-height: 100dvh;
    width: 100%;
    max-width: 1100px;
    padding: 20px;
  }
  .action-button {
    color: aqua;
    font-size: 16px;
    background-color: black;
    padding: 8px 16px;
    border-radius: 4px;
    border: 1px solid aqua;
    text-decoration: none;
  }
</style>
---
import BackgroundGradient from "@components/atoms/GradientBg/BackgroundGradient.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout headerType="fullscreen">
  <BackgroundGradient>
    <div class="header-demo">
      <h1>Header Demo</h1>
      <p>This is an example of the header in "fullscreen" mode.
        Note the differences with the "floating" mode:
      </p>
      <ul>
        <li>No padding in the header container</li>
        <li>No border-radius</li>
        <li>Occupies the full width of the screen</li>
        <li>Internal padding adjusted for fullscreen mode</li>
      </ul>
      <a href="/">See floating demo</a>
       <a href="https://www.npmjs.com/package/@sofidevo/astro-dynamic-header?activeTab=readme" target="_blank">Check on npm package</a>
    </div>
  </BackgroundGradient>
</Layout>


<style >

  .header-demo {
    text-align: left;
    padding: 2rem;
    max-width: 800px;
    line-height: 1.6;
    h1 {
      font-size: 3rem;
      margin-bottom: 1rem;
    }
    p{
      font-size: 1.5rem;
    }
    a {
      color: aqua;
      font-size: 2rem;
      background-color: black;
      padding: 1rem 2rem;
      border-radius: 4px;
      border: 1px solid aqua;
    }
    ul {
      margin-left: 1.5rem;
      li {
        margin-bottom: 0.5rem;
        list-style: disc;
        font-size: 1.4rem;
      }
    }
  }
  .header-demo > *:not(:last-child){
    margin-bottom: 2rem;
  }
</style>